<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" style="-fx-background-color: rgb(41,40,45);" stylesheets="@../style/style.css"
            xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.view.ctrl.NormalOrderViewCtrl">
    <children>
        <Button fx:id="addNewBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addNewBtnEvent"
                prefHeight="35.0" prefWidth="148.0" text="+ Stock Item" AnchorPane.rightAnchor="10.0"
                AnchorPane.topAnchor="10.0"/>
        <HBox layoutY="20.0" spacing="5.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0"
              AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="55.0">
            <children>
                <TableView fx:id="orderTable" prefWidth="502.0" HBox.hgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="dateCol" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" text="Date"/>
                        <TableColumn fx:id="timeCol" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Time"/>
                        <TableColumn fx:id="idCol" maxWidth="35.0" minWidth="35.0" prefWidth="35.0" text="Id"/>
                        <TableColumn fx:id="detailCol" prefWidth="75.0" text="Supplier"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <VBox prefHeight="484.0" prefWidth="422.0" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <TableView fx:id="orderDataTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="amountCol" prefWidth="75.0" text="Item Name"/>
                                <TableColumn fx:id="rateCol" prefWidth="75.0" text="Exp. Date"/>
                                <TableColumn fx:id="discountCol" prefWidth="75.0" text="Price"/>
                                <TableColumn fx:id="remainderCol" prefWidth="75.0" text="Discount"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox layoutX="20.0" layoutY="20.0" spacing="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="84.0"
              AnchorPane.topAnchor="10.0">
            <children>
                <Button fx:id="viewAllBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#viewAllBtnEvent" prefHeight="35.0" prefWidth="100.0" text="View All"/>
                <Button fx:id="todayBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#todayBtnEvent" prefHeight="35.0" prefWidth="80.0" text="Today"/>
                <Region prefWidth="10.0"/>
                <ComboBox fx:id="yearCombo" maxHeight="1.7976931348623157E308" onAction="#yearComboEvent"
                          prefWidth="100.0" promptText="Year"/>
                <ComboBox fx:id="monthCombo" maxHeight="1.7976931348623157E308" onAction="#monthComboEvent"
                          prefWidth="150.0" promptText="Month"/>
                <ComboBox fx:id="dayCombo" maxHeight="1.7976931348623157E308" maxWidth="100.0" onAction="#dayComboEvent"
                          prefWidth="100.0" promptText="Day" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchCustomerText" maxWidth="1.7976931348623157E308" prefHeight="35.0"
                           prefWidth="206.0" promptText="Search By Supplier"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
